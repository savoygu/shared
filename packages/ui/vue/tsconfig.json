{
  "extends": "@savoygu/tsconfig/web.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@shared/vue": ["./src"],
      "@shared/vue/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue"
  ]
}
